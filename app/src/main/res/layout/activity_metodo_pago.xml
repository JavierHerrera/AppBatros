<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="appbatros.solutions.com.mx.appbatros.ActivityMetodoPago">

    <RelativeLayout

        style="@style/cabeceraOrigenDestino"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/cabeceraOrigenDestino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Tiempo restante para finalizar compra "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tiempo"
                style="@style/cabeceraOrigenDestino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04:15 "
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp">

        <LinearLayout
                android:onClick="cambiarActivityAgregarTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/linearLayNormal"
                android:gravity="center_vertical"
               >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_debitocredito"
                    />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Credito/Debito"
                    android:textSize="16sp"/>

            </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

        <LinearLayout
                android:onClick="cambiarActivityPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/linearLayNormal"

                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_paypal" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="PayPal"
                    android:textSize="16sp"/>

            </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

        <LinearLayout
                android:onClick="cambiarActivityOxxo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/linearLayNormal"

                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_oxxo"
                    />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Oxxo Pay"
                    android:textSize="16sp"/>

            </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

    </LinearLayout>

</LinearLayout>
