<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appbatros.solutions.com.mx.appbatros.ActivityMetodoPago">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp">

        <LinearLayout
                android:onClick="cambiarActivityAgregarTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/linearLayNormal"
                android:gravity="center_vertical"
               >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_debitocredito"
                    />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Credito/Debito"
                    android:textSize="16sp"/>

            </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

        <LinearLayout
                android:onClick="cambiarActivityPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/linearLayNormal"

                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_paypal" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="PayPal"
                    android:textSize="16sp"/>

            </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

        <LinearLayout
                android:onClick="cambiarActivityOxxo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/linearLayNormal"

                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_oxxo"
                    />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Oxxo Pay"
                    android:textSize="16sp"/>

            </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

    </LinearLayout>

</RelativeLayout>
