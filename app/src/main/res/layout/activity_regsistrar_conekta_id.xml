<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appbatros.solutions.com.mx.appbatros.ActivityRegsistrarConektaID">

    <RelativeLayout
        android:id="@+id/relavit_contador"
        style="@style/cabeceraOrigenDestino"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/cabeceraOrigenDestino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Tiempo restante para finalizar compra "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tiempo"
                style="@style/cabeceraOrigenDestino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04:15 "
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        style="@style/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/relavit_contador">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese sus datos"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/et_nombre_RegistrarConektaID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="nombre" />


        <EditText
            android:id="@+id/et_correo_RegistrarConektaID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="correo" />


        <EditText
            android:id="@+id/et_telefono_RegistrarConektaID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Numero de telefono" />


    </LinearLayout>


    <Button
        android:onClick="validarDatosyGuardarlos"
        style="@style/botonActivo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"/>

</RelativeLayout>
