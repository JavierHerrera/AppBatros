<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="appbatros.solutions.com.mx.appbatros.ActivityResumen">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="false"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/itemListaLayout2lineas"
        android:layout_marginBottom="8dp"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/textView_origen_resumen"
                    style="@style/itemListaTextoSecundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hermosillo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:text=" a "/>

                <TextView
                    android:id="@+id/textView_destino_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"

                    android:text="Puerto Peñasco"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salida: "
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:id="@+id/textView_diaSemana_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viernes"
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:id="@+id/textView_fechaSalida_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 agosto"
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:text=" a las: "/>

                <TextView
                    android:id="@+id/textView_horaSalida_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:textStyle="bold"
                    android:text=" 3:00 PM"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Subtotal: "/>

            <TextView
                android:id="@+id/textView_subtotalImporte_resumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/itemListaTextoPrimario"
                android:textStyle="bold"
                android:text="$1300"/>

        </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="IVA: "/>

                <TextView
                    android:id="@+id/textView_iva_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoPrimario"
                    android:textStyle="bold"
                    android:text="$1530"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Importe total: "/>

                <TextView
                    android:id="@+id/textView_totalImporte_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoPrimario"
                    android:textStyle="bold"
                    android:text="$1530"/>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cabeceraOrigenDestino"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos de pasajeros"
            android:textColor="@color/negro"
            android:textSize="16sp"
            android:elevation="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pasajero1_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemListaLayout2lineas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_pasajero1Nombre_resumen"
                    style="@style/itemListaTextoPrimario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Entrique Peña Nieto" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_pasajero1Tipo_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estudiante" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asiento " />

                    <TextView
                        android:id="@+id/textView_pasajero1NumeroAsiento_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Importe: "
                        />

                    <TextView
                        android:id="@+id/textView_pasajero1Importe_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="250"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pasajero2_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemListaLayout2lineas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_pasajero2Nombre_resumen"
                    style="@style/itemListaTextoPrimario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Goku Kakaroto" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_pasajero2Tipo_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adulto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asiento " />

                    <TextView
                        android:id="@+id/textView_pasajero2NumeroAsiento_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"

                        android:text="12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Importe: " />

                    <TextView
                        android:id="@+id/textView_pasajero2Importe_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"

                        android:text="$" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pasajero3_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemListaLayout2lineas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_pasajero3Nombre_resumen"
                    style="@style/itemListaTextoPrimario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Roberto Alvarez" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_pasajero3Tipo_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niño" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asiento " />

                    <TextView
                        android:id="@+id/textView_pasajero3NumeroAsiento_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Importe: " />

                    <TextView
                        android:id="@+id/textView_pasajero3Importe_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="$90" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pasajero4_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemListaLayout2lineas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_pasajero4Nombre_resumen"
                    style="@style/itemListaTextoPrimario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yorch" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_pasajero4Tipo_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asiento " />

                    <TextView
                        android:id="@+id/textView_pasajero4NumeroAsiento_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Importe: " />

                    <TextView
                        android:id="@+id/textView_pasajero4Importe_resumen"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"

                        android:text="$300" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/botonLayout"
        android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <CheckBox
                        android:id="@+id/checkb_aceptarcompra_resumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Acepto el monto total de compra"
                        android:textSize="9sp"
                        />

                    <CheckBox
                        android:id="@+id/checkb_aceptoterminos_resumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" He leído y acepto los términos y condiciones"
                        android:textSize="9sp"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirmarActivo_resumen"
                    android:onClick="cambiarActivityMetodoPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/botonNormal"
                    android:visibility="gone"
                    android:text="Confirmar"/>

                <Button
                    android:id="@+id/btn_confirmarInactivo_resumen"
                    android:onClick="solicitarAceptarTerminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/botonNormalInactivo"
                    android:visibility="visible"
                    android:text="Confirmar"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>

    </ScrollView>


</LinearLayout>