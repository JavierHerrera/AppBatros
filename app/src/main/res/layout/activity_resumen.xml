<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="appbatros.solutions.com.mx.appbatros.ActivityResumen">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="false"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/itemListaLayout2lineas"
        android:layout_marginBottom="8dp"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/textView_origen_resumen"
                    style="@style/itemListaTextoSecundario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hermosillo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:text=" a "/>

                <TextView
                    android:id="@+id/textView_destino_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:text="Puerto Peñasco"/>
                <TextView
                    android:id="@+id/tv_tipoViaje_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:text=" Rendondo"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salida: "
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:id="@+id/textView_diaSemana_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viernes"
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:id="@+id/textView_fechaSalida_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 agosto"
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:text=" a las: "/>

                <TextView
                    android:id="@+id/textView_horaSalida_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:textStyle="bold"
                    android:text=" 3:00 PM"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Subtotal: "/>

            <TextView
                android:id="@+id/textView_subtotalImporte_resumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/itemListaTextoPrimario"
                android:textStyle="bold"
                android:text="$1300"/>

        </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="IVA: "/>

                <TextView
                    android:id="@+id/textView_iva_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoPrimario"
                    android:textStyle="bold"
                    android:text="$1530"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Importe total: "/>

                <TextView
                    android:id="@+id/textView_totalImporte_resumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoPrimario"
                    android:textStyle="bold"
                    android:text="$1530"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cabeceraOrigenDestino"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_datosPasajerosIda_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos de pasajeros"
            android:textColor="@color/negro"
            android:textSize="16sp"
            android:elevation="1dp"
            />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_contenedorDePasajerosIda_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/reciclador_Ida_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_datosPasajerosRegreso_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cabeceraOrigenDestino"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos de viaje de regreso"
            android:textColor="@color/negro"
            android:textSize="16sp"
            android:elevation="1dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_contenedorDePasajerosRegreso_resumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/reciclador_Regreso_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/botonLayout"
        android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <CheckBox
                        android:id="@+id/checkb_aceptarcompra_resumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Acepto el monto total de compra"
                        android:textSize="9sp"
                        />

                    <CheckBox
                        android:id="@+id/checkb_aceptoterminos_resumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" He leído y acepto los términos y condiciones"
                        android:textSize="9sp"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirmarActivo_resumen"
                    android:onClick="cambiarActivityMetodoPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/botonNormal"
                    android:visibility="gone"
                    android:text="Confirmar"/>

                <Button
                    android:id="@+id/btn_confirmarInactivo_resumen"
                    android:onClick="solicitarAceptarTerminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/botonNormalInactivo"
                    android:visibility="visible"
                    android:text="Confirmar"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>

    </ScrollView>


</LinearLayout>