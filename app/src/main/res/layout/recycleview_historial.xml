<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/itemListaLayout2lineas"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/textView_origen_historial"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hermosillo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/itemListaTextoSecundario"
                        android:text=" a "/>

                    <TextView
                        android:id="@+id/textView_destino_historial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/itemListaTextoSecundario"

                        android:text="Puerto Peñasco"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salida: "
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:id="@+id/textView_fechaSalida_historial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 agosto"
                    style="@style/itemListaTextoSecundario"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:text=" a las "/>

                <TextView
                    android:id="@+id/textView_horaSalida_historial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/itemListaTextoSecundario"
                    android:textStyle="bold"
                    android:text=" 3:00 PM"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de pago: "/>

                <TextView
                    android:id="@+id/textView_tipoPago_historial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"/>

                <TextView
                    android:id="@+id/textView_status_historial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código de autorización: "/>

                <TextView
                    android:id="@+id/textView_referencia_historial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="frrSG4gSGFtSDF"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pasajero_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemListaLayout2lineas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_pasajeroNombre_historial"
                    style="@style/itemListaTextoPrimario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nombre de Pasajero" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_pasajeroTipo_historial"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estudiante" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asiento " />

                    <TextView
                        android:id="@+id/textView_pasajeroNumeroAsiento_historial"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Importe: "
                        />

                    <TextView
                        android:id="@+id/textView_pasajeroImporte_historial"
                        style="@style/itemListaTextoSecundario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="250"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/linea"/>

    </LinearLayout>


</LinearLayout>