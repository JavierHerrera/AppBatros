<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        style="@style/linearLayNormal"
        android:gravity="start"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Eliminar asiento?"
            android:textSize="21sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/materialLinearMensajeBotonCanelarAceptar"
        >

        <Button
            android:id="@+id/botonCaneclarEliminarAsiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="#00fffefe"
            android:textColor="#147BCA"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/botonAceptarEliminarAsiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Eliminar"
            android:background="#00fffefe"
            android:textColor="#147BCA"
            android:textSize="15dp"/>


    </LinearLayout>

</LinearLayout>