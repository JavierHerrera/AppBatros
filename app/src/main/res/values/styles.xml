<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#147bca</item>
        <item name="colorPrimaryDark">#005099</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--- Elementos de layout Main -->
    <!--- Letras Negras Sobre Fondo Claro -->
    <style name="textoNegroFondoClaro">
        <item name="android:textColor">#bf000000</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="layoutMain">
        <item name="android:background">@color/grisClaroTransparencia</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>

    </style>

    <style name="botonesMasMenosMain">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="textoBotonMasMenos">
        <item name="android:textColor">#147BCA</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="textoPasajeros">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="numeroPasajeros">
        <item name="android:textColor">#147BCA</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="linearLayPasajeros">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


    <style name="colorPrincipal">
        <item name="android:textColor">#147BCA</item>
    </style>

    <style name="colorPrincipalFondo">
        <item name="android:colorBackground">#147BCA</item>
    </style>

    <style name="cabeceraOrigenDestino">
        <item name="android:textColor">#b3000000</item>
        <item name="android:background">#60aafe</item>
    </style>

    <style name="cabeceraOrigenDestino2">
        <item name="android:textColor">#b3000000</item>
        <item name="android:background">@color/primarioTranparencia</item>
    </style>


    <!--- Elementos de layout Camion -->
     <style name="asientoOcupado">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>


    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="item_margin">8dp</dimen>
    <dimen name="column_width">80dp</dimen>


    <style name="materialLinearMensajeBotonCanelarAceptar">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">end</item>
    </style>

</resources>
