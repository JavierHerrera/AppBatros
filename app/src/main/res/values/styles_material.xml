<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--- Lista -->
    <style name="itemListaLayout2lineas">
        <item name="android:height">64dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="itemListaTextoPrimario">
        <item name="android:textColor">@color/principal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="itemListaTextoSecundario">
        <item name="android:textColor">@color/grisMuyOscuro</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--- Lista -->


    <style name="subtituloTexto">
        <item name="android:height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/negroTransparencia</item>
    </style>

    <style name="botonNormal">
        <item name="android:background">@color/principal</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:height">36dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:textColor">#c8ffffff</item>
    </style>
    
    <style name="botonLayout">
        <item name="android:height">48dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>